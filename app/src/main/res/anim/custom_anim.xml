<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:shareInterpolator="false">


    <scale
        android:interpolator="@android:anim/accelerate_decelerate_interpolator"
        android:fromXScale="1.0" android:toXScale="0.2"
        android:fromYScale="1.0" android:toYScale="0.2"
        android:pivotX="50%"    android:pivotY="50%"
        android:fillAfter="false"
        android:duration="1000" />
    <rotate
        android:interpolator="@android:anim/accelerate_decelerate_interpolator"
        android:fromDegrees="0" android:toDegrees="360"
        android:toYScale="0.0"
        android:pivotX="50%" android:pivotY="50%"
        android:startOffset="0"
        android:duration="500"
        android:repeatMode="restart"
        android:repeatCount="5"/>

   <translate
        android:interpolator="@android:anim/accelerate_decelerate_interpolator"
        android:startOffset="500"
        android:duration="500"
        android:fromXDelta="0"  android:toXDelta="-24%p"
        android:fromYDelta="0"  android:toYDelta="12%p"
        />

    <translate
        android:interpolator="@android:anim/accelerate_decelerate_interpolator"
        android:startOffset="1000"
        android:duration="500"
        android:fromXDelta="-24%p"  android:toXDelta="24%p"
        android:fromYDelta="12%p"  android:toYDelta="-12%p"
        />
    <scale
        android:startOffset="3000"
        android:interpolator="@android:anim/accelerate_decelerate_interpolator"
        android:fromXScale="0.2" android:toXScale="5.0"
        android:fromYScale="0.2" android:toYScale="5.0"
        android:pivotX="50%"     android:pivotY="50%"
        android:duration="1000"
        android:fillBefore="false" />


</set>
